<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.calculate.HelloController" prefWidth="1280" prefHeight="720">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <FlowPane>
    <Label fx:id="SumOnCheck" text="Сумма в чеке " minWidth="140"/>
    <TextField fx:id="TField"/>
  </FlowPane>

  <HBox spacing="50">
    <Button fx:id="ButtonBigProcent" text="Большие " onAction="#onBProcent" minWidth="120"/>
    <Label fx:id="LableBigProcent"/>
  </HBox>

  <HBox spacing="50">
    <Button fx:id="ButtonOrdinaryProcent" text="Обычные " onAction="#onOProcent" minWidth="120"/>
    <Label fx:id="LableOrdinaryProcent"/>
  </HBox>

  <HBox spacing="50">
    <Button fx:id="ButtonSmallProcent" text="Мелочь " onAction="#onSProcent" minWidth="120"/>
    <Label fx:id="LableSmallProcent"/>
  </HBox>
</VBox>
