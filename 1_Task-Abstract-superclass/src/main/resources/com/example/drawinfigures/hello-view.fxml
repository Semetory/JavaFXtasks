<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Slider?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.drawinfigures.HelloController">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="saveButton" onAction="#saveCanvas" text="Сохранить" />
            <Label text="Цвет:"/>
            <ColorPicker fx:id="cPicker" />

            <Label text="Толщина:"/>
            <Slider fx:id="thicknessSlider" min="1" max="10" value="2" showTickMarks="true"
                    showTickLabels="true" majorTickUnit="1" prefWidth="120"/>
        </HBox>
    </top>

    <center>
        <Canvas fx:id="canvas" width="800.0" height="480.0"/>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding> <Insets top="10" bottom="10"/> </padding>
            <Button fx:id="b_circle" text="Круг" onAction="#onCircleClick" />
            <Button fx:id="b_ellipse" text="Элипс" onAction="#onEllipseClick" />
            <Button fx:id="b_rectangle" text="Прямоугольник" onAction="#onRectangleClick" />
            <Button fx:id="b_rounded_rectangle" text="Скругленный прямоугольник" onAction="#onRoundedRectangleClick" />
            <Button fx:id="b_square" text="Квадрат" onAction="#onCSquareClick" />
        </HBox>
    </bottom>
</BorderPane>
